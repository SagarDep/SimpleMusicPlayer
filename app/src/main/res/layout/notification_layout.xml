<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/noti_album_art"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_weight="0"
        android:scaleType="centerCrop"
        android:src="@drawable/default_art"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/noti_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/noti_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="14sp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:paddingBottom="10dp"
            >

            <ImageView
                android:id="@+id/noti_prev_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:background="@drawable/unbounded_ripple"
                android:padding="5dp"
                android:src="@drawable/ic_pre"/>

            <ImageView
                android:id="@+id/noti_play_button"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/background_record"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_trying_play"
                />

            <ImageView
                android:id="@+id/noti_next_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:background="@drawable/unbounded_ripple"
                android:padding="5dp"
                android:src="@drawable/ic_next"/>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>